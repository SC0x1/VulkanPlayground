{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/VulkanPlayground",
            //"args": [
            //    "-pthread",
            //    "common.c"
            //],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "name": "Launch MinGW build",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/build/VulkanPlayground.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "gdb"
            },

            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}