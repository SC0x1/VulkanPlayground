            // },
            "logging": { "engineLogging": true }, //optional
            //"preLaunchTask": "Build Cmake Debug"
        },
        {
            "name": "Launch Release",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/VulkanPlayground",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "name": "Launch MinGW Release build",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/build/VulkanPlayground.exe",
                "MIMode": "gdb",
                "miDebuggerPath": "gdb"
            },

            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
